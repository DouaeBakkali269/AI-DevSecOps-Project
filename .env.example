# API Keys for LLM Models
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
TOGETHER_API_KEY=your-together-api-key-here  # For DeepSeek/LLaMA

# Model Selection (comma-separated)
# Options: gpt-4, claude-sonnet-4.5, deepseek-r1, llama-3.3
ENABLED_MODELS=gpt-4,claude-sonnet-4.5,deepseek-r1

# Application Settings
JUICE_SHOP_URL=http://localhost:3000
ZAP_API_KEY=your-zap-api-key

# Output Settings
RESULTS_DIR=./results
VERBOSE=true

# Evaluation Settings
RUN_EVALUATION=true
REFERENCE_POLICIES_DIR=./reference-policies

# Security Scanning Settings
RUN_SAST=true
RUN_SCA=true
RUN_DAST=true

# Optional: Snyk API (for enhanced SCA)
SNYK_TOKEN=your-snyk-token-here
